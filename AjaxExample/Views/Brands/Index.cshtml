@model IEnumerable<AjaxExample.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Brands List</h2>

<p>
    <button onclick="loadDoc('@Url.Action("AddBrand", "Brands")')">Create New</button>
</p>
<div id="create"></div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
        <td><button class="btn btn-primary" onclick="loadDoc('@Url.Action("Details", "Brands", new { id=item.Id })')">Details</button></td>
        </td>
    </tr>
}

</table>
<div id="details"></div>
